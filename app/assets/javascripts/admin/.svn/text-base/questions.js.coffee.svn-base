$(document).ready ->
  # @Author: Nada Nasr
  # @Summary: toggles the add_question_div to show and hide
  $("#add_question_button").click ->
    $("#add_question_div").toggle("slow")
    (if $(this).text = "+" then $(this).text "-" else $(this).text "+")

